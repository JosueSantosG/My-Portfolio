<div class="flex items-center justify-center my-8 p-4">
    <article 
        id="gallery"
        class="grid grid-cols-2 sm:grid sm:grid-cols-3 lg:grid lg:grid-cols-4 w-[95%] gap-4 overflow-hidden m-auto px-0 py-10"
    >
        {CERTIFICATES.map(({ src, alt, width, height }) => (
            <a 
                href={src} 
                class="hover:transition-transform hover:duration-[0.5s] hover:scale-[1.02]"

                data-pswp-width={width}
                data-pswp-height={height}
                data-cropped="true"
            >
                <img 
                    src={src} 
                    alt={alt} 
                    class="w-full h-36 shadow-md shadow-gray-500/50 dark:shadow-gray-50/50 object-cover rounded-lg md:w-[300px] md:h-[135px]" 
                />
            </a>
        ))}
    </article>
</div>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    showHideAnimationType: "zoom",
    secondaryZoomLevel: 1.2,
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>