---
import SocialPill from "./SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import GitHub from "./icons/GitHub.astro";
---

<div class="max-w-full">
	<div class="items-center gap-8 justify-center py-3 mx-auto md:ml-12 mt-16 w-full container lg:max-w-4xl md:max-w-2xl flex flex-col md:flex-row" >
		<div class="box">
			<div class="img-container shadow-lg shadow-black/90 dark:shadow-white/90">
				<div class="shine"></div>
			</div>
		</div>

		<div class="flex-1 p-4 text-center md:text-start">
			<div class="flex-1">
				<h1 class="text-4xl font-bold tracking-tight dark:text-white">
					Hey, me llamo Josué!
				</h1>
			</div>
			<div class="flex-1">
				<p
					class="text-balance mt-6 text-xl [&>strong]:text-green-500 dark:[&>strong]:text-[#e2ff73] [&>strong]:font-semibold dark:text-gray-300"
				>
					+1 años de experiencia. <strong
						>Ingeniero en Tecnologías de la Información
					</strong> de Ecuador, Santa Elena.
				</p>
			</div>
		</div>
		<hr />
	</div>
</div>

<nav class="flex flex-wrap gap-4 md:mt-16 justify-center">
	<SocialPill href="mailto:josueesg08@gmail.com">
		<MailIcon class="size-4" />
		Correo
	</SocialPill>
	<SocialPill href="https://www.linkedin.com/in/josuesantosg/">
		<LinkedInIcon class="size-4" />
		LinkedIn
	</SocialPill>
	<SocialPill href="https://github.com/JosueSantosG">
		<GitHub class="size-4" />
		GitHub
	</SocialPill>
</nav>

<style>
	.box {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.img-container {
		background: url("./assets/FotoPerfil.webp");
		height: 200px;
		width: 200px;
		background-size: 200px;
		border-radius: 50%;
		position: relative;
		overflow: hidden;
	}

	.shine {
		content: "";
		position: absolute;
		background-color: rgba(255, 255, 255, 0.3);
		height: 200px;
		width: 60px;
		left: -80px;
		transform: skewX(-30deg);
	}

	.slide {
		animation: slide 1s linear;
	}

	@keyframes slide {
		0% {
			left: -80px;
		}
		100% {
			left: 100%;
		}
	}
</style>

<script>
	function startAnimation() {
		const shine= document.querySelector(".shine");
		if (!shine) return;
		shine.classList.add("slide");
		setTimeout(() => {
			shine.classList.remove("slide");
		}, 1000); // Duración de la animación
	}
	setInterval(startAnimation, 4000); // Intervalo de repetición
</script>


