import GitHub from "./icons/GitHub.astro";
---

<!--   -->
<div class="max-w-full">
	<div
		class="items-center gap-8
      justify-center
      py-3
      mx-auto md:ml-12 mt-16 w-full container
      lg:max-w-4xl md:max-w-2xl
      flex flex-col md:flex-row"
	>
		<div>
			<img
				class="rounded-full shadow-lg shadow-black/90 dark:shadow-white/90"
				src="/assets/FotoPerfil.webp"
				alt="Foto Perfil"
