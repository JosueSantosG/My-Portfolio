---
const { href } = Astro.props;
---

<a
	href={href}
	role="link"
	target="_blank"
	class="inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base
  transition
  hover:bg-green-400/50
  dark:hover:bg-green-200/80
  hover:text-black
  bg-gray-800
  border-gray-600
  text-white
    border
  focus-visible:ring-yellow-500/80 text-md
  hover:border-gray-700 group max-w-fit rounded-xl
    focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
>
	<slot />
</a>
